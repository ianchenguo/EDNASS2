@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

@model ICollection<ENETCare.Business.MedicationTypeViewData>

<!--panel-start-->
<div class="panel panel-default">

    <!--panel-heading-start-->
    <div class="panel-heading">
        <h3 class="panel-title">
            Doctor
            @ViewBag.Name's Activity
        </h3>
    </div>
    <!--panel-heading-end-->
    <!--panel-body-start-->
    <div class="panel-body">
        @if (Model.Count > 0)
        {
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <td>Type</td>
                        <td>Quantity</td>
                        <td>Value ($)</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var activity in Model)
                    {
                        <tr>
                            <td>
                                @activity.Type
                            </td>
                            <td>
                                @activity.Quantity
                            </td>
                            <td>
                                @activity.Value
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <b>There is no activity from doctor @ViewBag.Name</b>
        }

        <p class="text-right">
            <strong>Grand Total:</strong> $ @ViewBag.Sum
        </p>

        <a class="btn btn-default btn-float-right" href='@Url.Action("DoctorList", "Manager")'>
            Back to Doctor List
        </a>

    </div>
    <!--panel-body-end-->
</div>
<!--panel-end-->