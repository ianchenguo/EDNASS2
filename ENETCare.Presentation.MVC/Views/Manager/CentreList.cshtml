@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}


@model ICollection<ENETCare.Business.DistributionCentre>

<!--panel-start-->
<div class="panel panel-default">

    <!--panel-heading-start-->
    <div class="panel-heading">
        <h3 class="panel-title">Distribution Centre List</h3>
    </div>
    <!--panel-heading-end-->
    <!--panel-body-start-->
    <div class="panel-body">

        <table class="table table-striped table-hover table-bordered">
            <thead><tr><td>Distribution Centres</td></tr></thead>
            <tbody>
                @foreach (var centre in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(centre.Name, "DistributionCentreStock", new { id = centre.ID, name = centre.Name })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-default btn-float-right" href='@Url.Action("index","Manager")'>
            Back to Home
        </a>

    </div>
</div>
<!--panel-end-->