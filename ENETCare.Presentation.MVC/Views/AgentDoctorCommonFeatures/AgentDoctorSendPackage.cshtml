@using ENETCare.Presentation.MVC.Models
@model SendingViewModel
@{
    Layout = "~/Views/AgentDoctorCommonFeatures/MasterPage.cshtml";
}

<!--panel-start-->
<div class="panel panel-default">
    <!--panel-heading-start-->
    <div class="panel-heading">
        <h3 class="panel-title">Send Medication Package</h3>
    </div>
    <!--panel-heading-end-->
    <!--panel-body-start-->
@using (Html.BeginForm())
{
    <div class="panel-body">
        <div class="form-horizontal col-sm-10 col-sm-offset-1">
            @if (Model != null && Model.Result != null)
            {
                <div id="AgentDoctorSendPackageAlertWindowDiv" class="alert @Model.Result.AlertStyle" data-dismiss="alert">
                    <label id="AgentDoctorSendPackageAlertWindowContentLabel">@Model.Result.Message</label>
                </div>
            }
            <div class="form-group">
                <label id="AgentDoctorSendingDropDownListLabel" class="col-xs-3">Destination: </label>
                <div class="col-xs-9">
                    <select id="AgentDoctorSendingDropDownList" class="form-control" name="distributionCenterId">
                        @foreach (var item in Model.DistributionCentres)
                        {
                            <option value="@item.ID">
                                @item.Name
                            </option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label id="AgentDoctorSendPackageTypebarcodeLabel" class="col-xs-3">Barcode: </label>
                <div class="col-xs-9">
                    @Html.TextBox("barcode", null, new { @class = "form-control", @type = "text" })
                </div>
            </div>

            <a class="btn btn-danger btn-float-right btn-margin-left" type="a" href="@Url.Action("AgentDoctorHomePackages", "AgentDoctorCommonFeatures")">Cancel</a>
            <input type="submit" class="btn btn-success btn-float-right" value="Send" />
        </div>
    </div>
    <!--panel-body-end-->
}
</div>
<!--panel-end-->