            </p>
            <a class="btn btn-danger btn-float-right btn-margin-left" type="a" href="@Url.Action("AgentDoctorHomePackages", "AgentDoctorCommonFeatures")">Cancel</a>
            <input type="submit" value="Register" class="btn btn-success btn-float-right" id="AgentDoctorRegisterButton" />
        </div>
    </div>
    <!--panel-body-end-->
}
</div>

@Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
<script src="@Url.Content("~/Scripts/myJS/ad_Register.js")" type="text/javascript"></script>